    <link rel="stylesheet" href="~/Styles/style.css">

</head>
<body>


    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">Room Booking System</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="/Main/ShowTodayBookings">Schedule</a>
            <a class="p-2 text-dark" href="/Main/CreateBooking">Create New Booking</a>

            @if (Session["Role"]?.ToString() == "Admin")
            {
                <a class="p-2 text-dark" href="/Main/AdminApprover">Admin Panel</a>
            }
        </nav>
        <a class="btn btn-outline-primary" href="/Home/Index">Sign out</a>
    </div>


    @RenderBody();
    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-12 col-md">
                <img class="mb-2" src="../../assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
            </div>
            <div class="col-6 col-md">
                <h5>Features</h5>
