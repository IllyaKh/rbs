    <script src="~/Scrips/jquery-3.3.1.min.js"></script>
    <script src="~/Scrips/jquery-ui.js"></script>
    <script src="~/Scrips/popper.min.js"></script>
    <script src="~/Scrips/bootstrap.min.js"></script>
    <script src="~/Scrips/owl.carousel.min.js"></script>
